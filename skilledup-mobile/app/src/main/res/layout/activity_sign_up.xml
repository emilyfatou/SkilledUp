<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <android.support.v7.widget.Toolbar
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/colorUpMar">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_keyboard_arrow_left_white_24dp" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Register"
            android:textSize="18dp"
            android:textColor="@color/colorWhite"/>

    </android.support.v7.widget.Toolbar>


    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true">
        <TableLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:stretchColumns="1">
        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="vertical"
            android:layout_margin="20dp"
            android:layout_height="wrap_content">

            <android.support.design.widget.TextInputLayout
                android:id="@+id/first_name_rapper"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <EditText
                    android:layout_width="match_parent"
                    android:drawableRight="@drawable/ic_person_black_24dp"
                    android:hint="First name"
                    android:backgroundTint="@color/backgroundTint"
                    android:layout_height="wrap_content" />
            </android.support.design.widget.TextInputLayout>

            <android.support.design.widget.TextInputLayout
                android:id="@+id/last_name_rapper"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <EditText
                    android:layout_width="match_parent"
                    android:drawableRight="@drawable/ic_person_black_24dp"
                    android:hint="Last name"
                    android:backgroundTint="@color/backgroundTint"
                    android:layout_height="wrap_content" />
            </android.support.design.widget.TextInputLayout>

            <android.support.design.widget.TextInputLayout
                android:id="@+id/email_rapper"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <EditText
                    android:layout_width="match_parent"
                    android:hint="Email address"
                    android:backgroundTint="@color/backgroundTint"
                    android:drawableRight="@drawable/ic_email_black_24dp"
                    android:inputType="textEmailAddress"
                    android:layout_height="wrap_content" />
            </android.support.design.widget.TextInputLayout>

            <android.support.design.widget.TextInputLayout
                android:id="@+id/pass_rapper"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <EditText
                    android:layout_width="match_parent"
                    android:hint="Password"
                    android:backgroundTint="@color/backgroundTint"
                    android:drawableRight="@drawable/ic_lock_outline_black_24dp"
                    android:inputType="textPassword"
                    android:layout_height="wrap_content" />
            </android.support.design.widget.TextInputLayout>

            <android.support.design.widget.TextInputLayout
                android:id="@+id/confirm_pass_rapper"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <EditText
                    android:layout_width="match_parent"
                    android:hint="Confirm password"
                    android:backgroundTint="@color/backgroundTint"
                    android:drawableRight="@drawable/ic_lock_outline_black_24dp"
                    android:inputType="textPassword"
                    android:layout_height="wrap_content" />
            </android.support.design.widget.TextInputLayout>

            <Spinner
                android:layout_marginTop="8dp"
                android:id="@+id/reg_country"
                android:layout_width="match_parent"
                android:entries="@array/sports_array"
                android:layout_height="wrap_content">

            </Spinner>
            <Spinner
                android:layout_marginTop="8dp"
                android:id="@+id/reg_city"
                android:entries="@array/city_array"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
            </Spinner>
            <Spinner
                android:layout_marginTop="8dp"
                android:id="@+id/reg_education"
                android:entries="@array/searchFilter"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
            </Spinner>
            <CheckBox
                android:id="@+id/checkbox_reg"
                android:layout_width="match_parent"
                android:layout_marginTop="8dp"
                android:text="I agreed to the Terms and Conditions of SkilledUp"
                android:layout_height="wrap_content" />

            <Button
                android:layout_width="match_parent"
                android:layout_marginTop="8dp"
                android:id="@+id/signup_button"
                android:text="Get Started"
                android:background="@drawable/drawbale_welcome_btn"
                android:textColor="@color/colorWhite"
                android:layout_height="wrap_content" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <TextView
                    android:layout_width="0dp"
                    android:textSize="16sp"
                    android:layout_weight=".50"
                    android:layout_marginTop="16dp"
                    android:gravity="right"
                    android:textColor="#000000"
                    android:text="Already a member? "
                    android:layout_height="wrap_content" />
                <TextView
                    android:textSize="16sp"
                    android:layout_marginTop="16dp"
                    android:layout_width="0dp"
                    android:id="@+id/already_member"
                    android:layout_weight=".50"
                    android:textColor="@color/ColorBlueMar"
                    android:layout_height="wrap_content"
                    android:text="Sign in"/>
            </LinearLayout>

        </LinearLayout>

        </TableLayout>

    </ScrollView>

</LinearLayout>