<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <android.support.v7.widget.Toolbar
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/toolbarMar"
            android:id="@+id/pin_verify_toolbar">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <ImageView
                    android:layout_width="wrap_content"
                    android:id="@+id/ima_back"
                    android:layout_height="wrap_content"
                    android:src="@drawable/ic_keyboard_arrow_left_white_24dp"
                    android:layout_marginRight="8dp"/>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textColor="@color/colorWhite"
                    android:textAppearance="@style/Base.TextAppearance.AppCompat.Medium"
                    android:text="Pin Verification"/>

            </LinearLayout>
        </android.support.v7.widget.Toolbar>


        <android.support.design.widget.TextInputLayout
            android:id="@+id/reset_pass_rapper"
            android:layout_marginTop="20dp"

            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <EditText
                android:id="@+id/reset_pass"
                android:inputType="textPassword"
                android:layout_width="match_parent"
                android:paddingRight="10dp"
                android:drawableRight="@drawable/ic_lock_outline_black_24dp"
                android:backgroundTint="@color/backgroundTint"
                android:layout_height="wrap_content"
                android:layout_marginTop="25dp"
                android:layout_marginLeft="48dp"
                android:layout_marginRight="48dp"
                android:layout_marginBottom="4dp"
                android:hint="New password" />
        </android.support.design.widget.TextInputLayout>

    <android.support.design.widget.TextInputLayout
        android:id="@+id/reset_pass_conf_rapper"

        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <EditText
            android:id="@+id/reset_pass_conf"
            android:inputType="textPassword"
            android:layout_width="match_parent"
            android:paddingRight="10dp"
            android:drawableRight="@drawable/ic_lock_outline_black_24dp"
            android:backgroundTint="@color/backgroundTint"
            android:layout_height="wrap_content"
            android:layout_marginTop="25dp"
            android:layout_marginLeft="48dp"
            android:layout_marginRight="48dp"
            android:layout_marginBottom="4dp"
            android:hint="Confirm password" />
    </android.support.design.widget.TextInputLayout>
        <Button
            android:id="@+id/reset_btn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:layout_marginLeft="48dp"
            android:layout_marginRight="48dp"
            android:textSize="16sp"
            android:textColor="@color/colorWhite"
            android:background="@drawable/drawbale_welcome_btn"
            android:layout_marginBottom="16dp"

            android:text="Reset"/>


</LinearLayout>