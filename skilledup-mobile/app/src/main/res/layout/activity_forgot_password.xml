<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <android.support.v7.widget.Toolbar
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/toolbarMar"
        android:id="@+id/reset_toolbar">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <ImageView
                android:layout_width="wrap_content"
                android:id="@+id/ima_back"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_keyboard_arrow_left_white_24dp"
                android:layout_marginRight="8dp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/colorWhite"
                android:textAppearance="@style/Base.TextAppearance.AppCompat.Medium"
                android:text="Forgot password"/>

        </LinearLayout>
    </android.support.v7.widget.Toolbar>
    <TextView
        android:layout_marginTop="50dp"
        android:layout_width="match_parent"
        android:gravity="center"
        android:textColor="@color/colorAccent"
        android:textSize="25sp"
        android:text="Skilled Up"
        android:layout_height="wrap_content" />

    <android.support.design.widget.TextInputLayout
        android:id="@+id/recovery_email_rapper"
        android:layout_marginTop="20dp"

        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <EditText
            android:id="@+id/reset_email"
            android:inputType="textEmailAddress"
            android:layout_width="match_parent"
            android:paddingRight="10dp"
            android:backgroundTint="@color/backgroundTint"
            android:drawableRight="@drawable/ic_email_black_24dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="25dp"
            android:layout_marginLeft="48dp"
            android:layout_marginRight="48dp"
            android:layout_marginBottom="4dp"
            android:hint="Email address" />
    </android.support.design.widget.TextInputLayout>
    <Button
        android:id="@+id/reset_btn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"
        android:layout_marginLeft="48dp"
        android:layout_marginRight="48dp"
        android:textSize="16sp"
        android:textColor="#FFFFFF"
        android:background="@drawable/drawbale_welcome_btn"
        android:layout_marginBottom="16dp"
        android:text="Reset Password"/>

</LinearLayout>